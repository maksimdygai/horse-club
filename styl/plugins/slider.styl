#slide
    position relative
    width 100%
    height 585px
    margin 0 auto
    padding 0px 0px 0 0px
    z-index 2
    overflow hidden

.slider
    width 1264px
    height 465px
    margin 0 auto 26px
    position relative
    z-index 2
    overflow visible !important

.items
    display none
.pagination
    display none

.prev
    position absolute
    top 634px
    left 125px
    z-index 111
    display inline-block
    width 22px
    height 43px
    background url(../img/icons/prev.gif) 0 0 no-repeat
    &:hover
        background-position 0 bottom

.next
    position absolute
    top 634px
    right 125px
    z-index 111
    display inline-block
    width 22px
    height 43px
    background url(../img/icons/next.gif) 0 0 no-repeat
    &:hover
        background-position 0 bottom

.banner
    position absolute
    left 162px
    top 465px
    width 940px
    overflow hidden
    padding 10px 0 0px 0
    p
        width 740px
        float left
        strong
            font-size 40px
            color #fff
            font-weight normal
            letter-spacing -3px
            display block
        span
            font-size 18px
            color #636f6f
            font-weight normal
            letter-spacing -1px
            display block
            margin-top -1px
    a
        background #ef6f53
        color #fff
        font-size 26px
        line-height 32px
        padding 11px 24px 21px 24px
        display inline-block
        float right
        margin-top 18px
        &:hover
            background #636f6f



