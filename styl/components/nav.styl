.nav
    clearfix()
    margin 14px 0 0
    font-size 1.5em
    &__list
        list-style none
        margin 0
        padding 0
    &__item
        float left
    &__link
        display inline-block
        padding 11px 16px
        text-transform uppercase
        letter-spacing -1px
        transition color .2s ease
        &.active
            color rgb(239, 111, 83)
        &:first-child
            padding-left 0
        &:hover
            color rgb(239, 111, 83)
